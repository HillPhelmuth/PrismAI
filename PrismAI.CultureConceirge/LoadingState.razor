                    <json-viewer data="@jsonObj" style="width: 100%"></json-viewer>
                </div>
            }
        </div> *@
    </div>
    <div class="progress-section">
        <div class="progress-bar-container">
            <div class="progress-bar"></div>
        </div>
    </div>
</div>
