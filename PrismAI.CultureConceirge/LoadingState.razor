<div class="loading-container">
    <div class="loading-header">
        <h2 class="loading-title">Creating Your Perfect Experience</h2>
        <div class="preferences-display">
            <p class="preferences-text">
                <span class="preference-item">Theme:</span> @Preferences?.Theme
                @if (!string.IsNullOrEmpty(Preferences?.Timeframe))
                {
                    <span class="preference-separator">â€¢</span>
                    <span class="preference-item">When:</span> @Preferences.Timeframe
                }
            </p>
        </div>
    </div>
    <div class="loading-grid">
        <div class="loading-steps">
            @for (int i = 0; i < Steps.Count; i++)
            {
                var step = Steps[i];
                var isCurrent = (i == Steps.Count - 1); // Only the latest step is current
                <div class="loading-step @(isCurrent ? "current" : "")">
                    <div class="step-icon-wrapper">
                        <span class="step-icon">@step.Icon</span>
                    </div>
                    <div class="step-content">
                        <p class="step-label">@step.Label</p>
                    </div>
                </div>
            }
        </div>
        
